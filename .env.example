# App (production hardening)
NODE_ENV=development
# Comma-separated allowed CORS origins (e.g. https://yourdomain.com,https://www.yourdomain.com). Leave empty in dev for localhost.
ALLOWED_ORIGINS=

# Database (local dev; for production use Neon connection string with ?sslmode=require)
# Add connection_limit and pool_timeout for production: ?connection_limit=10&connect_timeout=10
DATABASE_URL="postgresql://specsheet:specsheet@127.0.0.1:5432/specsheet"
# Direct connection for migrations (no pooler). Can equal DATABASE_URL if not using PgBouncer.
DIRECT_DATABASE_URL="postgresql://specsheet:specsheet@127.0.0.1:5432/specsheet"

# JWT Secret (required; use a long random string in production, e.g. openssl rand -base64 32)
JWT_SECRET="your-secret-key-here"

# AWS / S3 (local dev: Minio; production: real S3 or Cloudflare R2)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="minioadmin"
AWS_SECRET_ACCESS_KEY="minioadmin"
S3_BUCKET="specsheet-compare"
# Only for local Minio; leave unset for real S3; for R2 set to your R2 endpoint URL
S3_ENDPOINT="http://localhost:9000"

# Document retention (hours)
DOCUMENT_TTL_HOURS="24"

# File upload (Phase 2)
MAX_FILE_SIZE_MB=10
MAX_UPLOAD_SIZE_MB=50

# Rate limiting (set to false to disable in dev; in-memory store)
RATE_LIMIT_ENABLED=
